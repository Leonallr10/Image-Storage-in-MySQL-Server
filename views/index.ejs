<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>popup</title>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
       <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
        
    </head>
    <body>
        <div class="container col-sm-12" id="mainform">
            <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                                     
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Pop up content</div>
                    </div> 
                    <div class="panel-body" >
                        <form class="form-horizontal" role="form" method="post" action="/" enctype="multipart/form-data">
                            <% if (message.length > 0) { %>
                                <div class="alert alert-success col-sm-12"><%= message %></div>
                            <% } %>
                            <div id="signupalert" style="display:none" class="alert alert-danger">
                                <p>Error:</p>
                                <span></span>
                            </div>
                            <div class="form-group">
                                <label for="main_heading" class="col-md-3 control-label">Main Heading</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="main_heading" placeholder="Main heading" required/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="sub_heading" class="col-md-3 control-label">Sub heading</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="sub_heading" placeholder="Sub heading" required>
                                </div>
                            </div>
                                                                                           
                            <div class="form-group">
                                <label for="content" class="col-md-3 control-label">Content</label>
                                <div class="col-md-9">
                                    <textarea class="form-control" name="content" rows="5" placeholder="Content" required></textarea>
                                </div>
                            </div>
                            

                            <div class="form-group">
                                <label for="uploaded_image1" class="col-md-3 control-label">Profile Image1</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="file" name="uploaded_image1" id="uploaded_image1" required>
                                    <div id="image1-error" class="text-danger" style="display: none;">Please select a valid image file.</div>
                                </div>
                            </div>   
                            
                            <div class="form-group">
                                <label for="uploaded_image2" class="col-md-3 control-label">Profile Image2 (Optional)</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="file" name="uploaded_image2" id="uploaded_image2">
                                    <div id="image2-error" class="text-danger" style="display: none;">Please select a valid image file.</div>
                                </div>
                            </div> 
                             
                            
                           
                            
                            <div class="form-group">
                                <!-- Button -->                                       
                                <div class="col-md-offset-3 col-md-9">
                                    <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Submit</button>
                                </div>
                            </div>  
                        </form>
                     </div>
                </div>
            </div>
        </div>
    </body>
</html>

<script>
    document.getElementById('uploaded_image1').addEventListener('change', function() {
        var file = this.files[0];
        var image1Error = document.getElementById('image1-error');
        if (file && !file.type.startsWith('image/')) {
            image1Error.style.display = 'block';
            this.value = ''; // Clear the file input
        } else {
            image1Error.style.display = 'none';
        }
    });

    document.getElementById('uploaded_image2').addEventListener('change', function() {
        var file = this.files[0];
        var image2Error = document.getElementById('image2-error');
        if (file && !file.type.startsWith('image/')) {
            image2Error.style.display = 'block';
            this.value = ''; // Clear the file input
        } else {
            image2Error.style.display = 'none';
        }
    });
</script>
